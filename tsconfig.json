{
  "compilerOptions": {
    "outDir": "./dist", // Output all compiled files to the 'dist' directory
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["renderer/components/*"],
      "@api/*": ["api/*"],
      "@types/*": ["types/*"]
    },
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
