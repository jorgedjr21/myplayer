{
  "name": "myelectronplayern",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev:main": "webpack --config config/webpack.main.config.js --watch",
    "dev:renderer": "webpack serve --config config/webpack.renderer.config.js",
    "dev": "concurrently --kill-others --success first \"npm run dev:main\" \"npm run dev:renderer\" \"cross-env ELECTRON_DEV=1 electron .\"",
    "electron": "electron .",
    "build-main": "webpack --config config/webpack.main.config.js",
    "build-renderer": "webpack --config config/webpack.renderer.config.js",
    "build-preload": "webpack --config config/webpack.preload.config.js",
    "build": "npm-run-all build-main build-renderer build-preload",
    "start": "electron dist/main.js",
    "test": "jest --config ./config/jest.config.js",
    "build:windows": "electron-builder --win --config.extraMetadata.directories.output=release/windows",
    "build:linux": "electron-builder --linux --config.extraMetadata.directories.output=release/linux",
    "build:all": "npm run build:windows && npm run build:linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Only for study",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-youtube": "^10.1.0",
    "swiper": "^11.1.14",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "com.example.myelectronplayern",
    "productName": "My Electron Player",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis" 
    }
  }
}
